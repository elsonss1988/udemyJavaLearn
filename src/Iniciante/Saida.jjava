package Iniciante;

import java.util.Locale;

public class Saida {
    public static void main(String[] args) {
        Double x = 10.8767;
        System.out.println(x);
        System.out.printf("%.2f%n", x);
        Locale.setDefault(Locale.FRANCE);
        System.out.printf("%.4f%n", x);
        Locale.setDefault(Locale.US);
        System.out.printf("%.4f%n", x);
    }
}
